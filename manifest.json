{
    "manifest_version": 3,
    "name": "LeetCommit",
    "version": "1.0.0",
    "description": "Auto-sync LeetCode submissions to GitHub and review them with spaced repetition.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://leetcode.com/*",
        "https://api.github.com/*"
    ],
    "background": {
        "service_worker": "src/background/github_client.js"
    },
    "action": {
        "default_popup": "src/popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "options_page": "src/options/review.html",
    "content_scripts": [
        {
            "matches": [
                "https://leetcode.com/problems/*"
            ],
            "js": [
                "src/content/submission_observer.js"
            ]
        }
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}